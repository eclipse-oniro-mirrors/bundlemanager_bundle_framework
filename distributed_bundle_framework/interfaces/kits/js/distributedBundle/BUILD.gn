import("//build/ohos.gni")
import("../../../../dbms.gni")

ohos_shared_library("distributedbundle") {
  include_dirs = [ "//foundation/bundlemanager/bundle_framework/interfaces/kits/js/common" ]
  defines = [
    "APP_LOG_TAG = \"DistributedBundleMgrService\"",
    "LOG_DOMAIN = 0xD001120",
  ]
  sources = [
    "distributed_bundle.cpp",
    "native_module.cpp",
    "//foundation/bundlemanager/bundle_framework/interfaces/kits/js/common/business_error.cpp",
    "//foundation/bundlemanager/bundle_framework/interfaces/kits/js/common/napi_arg.cpp",
  ]

  configs = [ "${dbms_services_path}:distributed_bms_config" ]

  deps = [
    "${common_path}:libappexecfwk_common",
    "${dbms_inner_api_path}:dbms_fwk",
  ]

  external_deps = [
    "ability_base:want",
    "bundle_framework:appexecfwk_base",
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "napi:ace_napi",
    "samgr:samgr_proxy",
  ]

  relative_install_dir = "module/bundle"
  subsystem_name = "bundle_framework"
  part_name = "distributed_bundle_framework"
}

group("jsapi_target_v9") {
  deps = []

  if (support_jsapi && bundle_framework_graphics) {
    deps += [ ":distributedbundle" ]
  }
}
