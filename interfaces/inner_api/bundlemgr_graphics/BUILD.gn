import("//build/ohos.gni")
import("../../../appexecfwk.gni")

config("bundlemgr_graphics_config") {
  include_dirs = [
    "include",
    "../../inner_api/appexecfwk_base/include",
  ]
}

ohos_shared_library("bundlemgr_graphics") {
  sources = [
    "src/bundle_graphics_client.cpp",
    "src/bundle_graphics_client_impl.cpp",
  ]

  configs = [ ":bundlemgr_graphics_config" ]

  defines = [
    "APP_LOG_TAG = \"BundleMgrService\"",
    "LOG_DOMAIN = 0xD001120",
  ]
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  deps = [
    "${base_path}:appexecfwk_base",
    "${common_path}:libappexecfwk_common",
    "${core_path}:appexecfwk_core",
  ]

  external_deps = [
    "ability_base:want",
    "c_utils:utils",
    "hilog:libhilog",
    "image_framework:image_native",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]

  public_external_deps = [ "json:nlohmann_json_static" ]
  subsystem_name = "bundlemanager"
  innerapi_tags = [ "platformsdk" ]
  part_name = "bundle_framework"
}
