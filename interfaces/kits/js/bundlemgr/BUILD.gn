import("//build/ohos.gni")
import("../../../../appexecfwk.gni")

ohos_shared_library("bundle") {
  branch_protector_ret = "pac_ret"

  sanitize = {
    boundary_sanitize = true
    cfi = true
    debug = false
    integer_overflow = true
    ubsan = true
  }

  include_dirs = [
    "${kits_path}/js/common",
    "${inner_api_path}/bundlemgr_graphics/include",
  ]
  defines = [
    "APP_LOG_TAG = \"BMS\"",
    "LOG_DOMAIN = 0xD001120",
  ]

  cflags = [
    "-Os",
    "-fstack-protector-strong",
  ]

  cflags_cc = [
    "-Os",
    "-fstack-protector-strong",
  ]

  sources = [
    "bundle_death_recipient.cpp",
    "bundle_mgr.cpp",
    "cleancache_callback.cpp",
    "installer_callback.cpp",
    "native_module.cpp",
  ]

  deps = [
    "${base_path}:appexecfwk_base",
    "${common_path}:libappexecfwk_common",
    "${core_path}:appexecfwk_core",
    "../common:bundle_napi_common",
  ]

  external_deps = [
    "ability_base:want",
    "ability_runtime:runtime",
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_core",
    "napi:ace_napi",
    "samgr:samgr_proxy",
  ]
  public_external_deps = [ "libuv:uv" ]
  if (bundle_framework_graphics) {
    defines += [ "BUNDLE_FRAMEWORK_GRAPHICS" ]
    deps += [ "${inner_api_path}/bundlemgr_graphics:bundlemgr_graphics" ]
    external_deps += [ "image_framework:image" ]
  }

  relative_install_dir = "module"
  subsystem_name = "bundlemanager"
  part_name = "bundle_framework"
}
