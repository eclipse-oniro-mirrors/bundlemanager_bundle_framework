import("//build/ohos.gni")
import("../../../../appexecfwk.gni")

ohos_shared_library("innerbundlemanager") {
  branch_protector_ret = "pac_ret"

  sanitize = {
    boundary_sanitize = true
    cfi = true
    debug = false
    integer_overflow = true
    ubsan = true
  }

  include_dirs = [ "${kits_path}/js/common" ]

  defines = [
    "APP_LOG_TAG = \"BMS\"",
    "LOG_DOMAIN = 0xD001120",
  ]

  cflags = [
    "-Os",
    "-fstack-protector-strong",
  ]

  cflags_cc = [
    "-Os",
    "-fstack-protector-strong",
  ]

  sources = []

  deps = [
    "${base_path}:appexecfwk_base",
    "${common_path}:libappexecfwk_common",
    "${core_path}:appexecfwk_core",
    "${kits_path}/js/common:bundle_napi_common",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "napi:ace_napi",
  ]
  public_external_deps = [ "libuv:uv" ]
  if (bundle_framework_launcher) {
    defines += [ "BUNDLE_FRAMEWORK_LAUNCHER" ]
    sources += [
      "bundle_status_callback.cpp",
      "js_launcher.cpp",
      "js_launcher_mgr.cpp",
    ]
    external_deps += [
      "ability_base:want",
      "common_event_service:cesfwk_core",
      "common_event_service:cesfwk_innerkits",
      "ipc:ipc_core",
    ]
  } else {
    sources += [ "js_launcher_unsupported.cpp" ]
  }

  relative_install_dir = "module/bundle"
  subsystem_name = "bundlemanager"
  part_name = "bundle_framework"
}
