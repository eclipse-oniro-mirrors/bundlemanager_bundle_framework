import("//build/ohos.gni")

group("common_target") {
  deps = [ ":libappexecfwk_common" ]
}

config("appexecfwk_common_config") {
  include_dirs = [
    "log/include",
    "utils/include",
  ]
}

config("bundle_all_dependent_config") {
  include_dirs = [ "log/include" ]
}

ohos_shared_library("libappexecfwk_common") {
  sources = [
    "log/src/app_log_wrapper.cpp",
    "utils/src/bundle_file_util.cpp",
    "utils/src/bundle_memory_guard.cpp",
  ]

  defines = [
    "APP_LOG_TAG = \"BundleMgrService\"",
    "LOG_DOMAIN = 0xD001120",
  ]

  if (use_musl) {
    if (use_jemalloc && use_jemalloc_dfx_intf) {
      defines += [ "CONFIG_USE_JEMALLOC_DFX_INTF" ]
    }
  }

  public_configs = [ ":appexecfwk_common_config" ]

  all_dependent_configs = [ ":bundle_all_dependent_config" ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]

  subsystem_name = "bundlemanager"
  innerapi_tags = [ "platformsdk" ]
  part_name = "bundle_framework"
}
