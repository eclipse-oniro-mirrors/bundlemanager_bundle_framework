import("//build/ohos.gni")
import("../../../../../../appexecfwk.gni")

ohos_hap("hapIncludeso8Feature1") {
  hap_profile = "src/main/module.json"
  hap_name = "hapIncludeso8Feature1"
  subsystem_name = "bundlemanager"
  final_hap_path = "$root_out_dir/tests/systemtest/bundle_framework/bundlemgrsst/resource/testHapSo/${hap_name}.hap"
  testonly = true
  deps = [
    ":hjs_demo_js_assets",
    ":hjs_demo_resources",
  ]
  shared_libraries = [
    ":hapso23",
    ":hapso24",
  ]
  certificate_profile = "${bundle_framework_path}/test/sceneProject/signature/com.example.testhapso8.p7b"
}

ohos_app_scope("bmsstagedemoone_app_profile") {
  app_profile = "../AppScope/app.json"
  sources = [ "../AppScope/resources" ]
}

ohos_resources("hjs_demo_resources") {
  sources = [ "src/main/resources" ]
  deps = [ ":bmsstagedemoone_app_profile" ]
  hap_profile = "src/main/module.json"
}

ohos_js_assets("hjs_demo_js_assets") {
  source_dir = "src/main/ets"
}

ohos_shared_library("hapso23") {
  sources = [ "src/main/cpp/hapso23.cpp" ]
  visibility = [ ":*" ]
  subsystem_name = "bundlemanager"
  part_name = "bundle_framework"
}

ohos_shared_library("hapso24") {
  sources = [ "src/main/cpp/hapso24.cpp" ]
  visibility = [ ":*" ]
  subsystem_name = "bundlemanager"
  part_name = "bundle_framework"
}
