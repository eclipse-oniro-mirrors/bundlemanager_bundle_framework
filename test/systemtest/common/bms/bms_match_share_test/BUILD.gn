import("//build/test.gni")
import("../../../../../appexecfwk.gni")

module_output_path = "bundle_framework/bundlemgrsst"

ohos_systemtest("BmsMatchShareTest") {
  module_out_path = module_output_path

  sources = [ "bms_match_share_test.cpp" ]
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  deps = [
    "${base_path}:appexecfwk_base",
    "${bundle_framework_path}/test/sceneProject/systemtest/stMatchShareBundle/matchShareBundle1:matchShareBundle1",
    "${bundle_framework_path}/test/sceneProject/systemtest/stMatchShareBundle/matchShareBundle2:matchShareBundle2",
    "${bundle_framework_path}/test/sceneProject/systemtest/stMatchShareBundle/matchShareBundle3:matchShareBundle3",
    "${common_path}:libappexecfwk_common",
    "${core_path}:appexecfwk_core",
    "${services_path}/test/moduletest/utils:tool_common",
  ]

  defines = [ "APP_LOG_TAG = \"BundleMgrTool\"" ]
  if (current_cpu == "arm64") {
    defines += [ "USE_KIT_STSTEM" ]
  }

  external_deps = [
    "ability_base:want",
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "access_token:libtokenid_sdk",
    "common_event_service:cesfwk_innerkits",
    "googletest:gtest_main",
    "hilog:libhilog",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]
}

group("systemtest") {
  testonly = true
  deps = [ ":BmsMatchShareTest" ]
}
