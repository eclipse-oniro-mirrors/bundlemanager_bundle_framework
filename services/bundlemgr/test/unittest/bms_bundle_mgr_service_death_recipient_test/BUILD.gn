import("//build/test.gni")
import("../../../../../appexecfwk.gni")

module_output_path = "bundle_framework/bundle_framework"

ohos_unittest("BmsBundleMgrServiceDeathRecipientTest") {
  module_out_path = module_output_path
  sources = [ "bms_bundle_mgr_service_death_recipient_test.cpp" ]
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  deps = [
    "${base_path}:appexecfwk_base",
    "${common_path}:libappexecfwk_common",
    "${core_path}:appexecfwk_core",
    "${services_path}/test/moduletest/utils:tool_common",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  defines = [ "APP_LOG_TAG = \"BundleMgrTool\"" ]

  external_deps = [
    "ability_base:want",
    "hilog:libhilog",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]
  if (storage_service_enable) {
    external_deps += [ "storage_service:storage_manager_sa_proxy" ]
    defines += [ "STORAGE_SERVICE_ENABLE" ]
  }
}

group("unittest") {
  testonly = true

  deps = [ ":BmsBundleMgrServiceDeathRecipientTest" ]
}
