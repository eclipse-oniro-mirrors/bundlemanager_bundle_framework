import("//build/test.gni")
import("../../../../../appexecfwk.gni")
module_output_path = "bundle_framework/bundle_framework"

ohos_unittest("BmsBundleMgrProxyTest") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }
  module_out_path = module_output_path
  include_dirs = [ "${bundle_framework_path}interfaces/inner_api/appexecfwk_core/include/bundlemgr" ]
  sources = [ "bms_bundle_mgr_proxy_test.cpp" ]

  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  deps = [
    "${base_path}:appexecfwk_base",
    "${common_path}:libappexecfwk_common",
    "${core_path}:appexecfwk_core",
    "//third_party/googletest:gtest_main",
  ]

  defines = [ "APP_LOG_TAG = \"BundleMgrTool\"" ]

  external_deps = [
    "ability_base:want",
    "ability_runtime:app_manager",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_core",
    "safwk:api_cache_manager",
    "samgr:samgr_proxy",
  ]
}

group("unittest") {
  testonly = true

  deps = [ ":BmsBundleMgrProxyTest" ]
}
